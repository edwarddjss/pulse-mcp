# PULSE Configuration

# Server Settings
SERVER_NAME=PULSE
SERVER_VERSION=2.0.0
PORT=3000

# Authentication (REQUIRED - Change these!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
DEFAULT_ADMIN_PASSWORD=admin123
BCRYPT_ROUNDS=12
TOKEN_EXPIRY=24h

# Security
ENABLE_RATE_LIMIT=true
MAX_REQUESTS=100
RATE_LIMIT_WINDOW=900000
ENABLE_HELMET=true

# Remote Management
ENABLE_WAKE_ON_LAN=true
ALLOW_SYSTEM_CONTROL=true
TRUSTED_NETWORKS=127.0.0.1,::1

# Target PC Configuration (optional)
TARGET_PC_NAME=MainPC
TARGET_PC_MAC=AA:BB:CC:DD:EE:FF
TARGET_PC_IP=192.168.1.100
TARGET_PC_PLATFORM=linux

# Monitoring
ENABLE_DETAILED_METRICS=true
MONITORING_REFRESH=5000
ENABLE_ALERTS=true

# Logging
LOG_LEVEL=info
